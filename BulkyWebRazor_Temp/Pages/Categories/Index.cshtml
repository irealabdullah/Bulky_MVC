@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel


<div class="container">

    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary h2">CATEGORY LIST</h2>
        </div>

        <div class="col-6 ">
            <a asp-page="categories/create"  class="btn btn-primary   float-end "> <i class="bi bi-plus-circle "></i> Create New Category</a>
        </div>
    </div>
<table class="table table-bordered table-striped">
    <thead>

        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
        

    </thead>
    <tbody >

        @{
            foreach (var item in Model.CategoryList.OrderBy(x => x.DisplayOrder))
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    
                    <td> 
                    <div class="w-75 btn-group" role="group"  >
                                <a asp-page="Category/Create"  asp-route-id = "@item.ID" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit </a>
                                <a asp-page="Category/Delete" asp-route-id="@item.ID" class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete </a>
                    </div>

                           
                    </td>
                </tr>
            }
        }

    </tbody>

</table>


    
</div>


